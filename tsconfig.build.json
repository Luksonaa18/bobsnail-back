{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src"              // compile from src folder
  },
  "include": [
    "src/**/*.ts",                // all TS files in src
    "src/main.serverless.ts"      // explicitly include serverless entry
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*spec.ts"
  ]
}
